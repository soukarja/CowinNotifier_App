                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:elevation="5dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
